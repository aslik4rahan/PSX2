<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="#A033A1FF"
                android:startColor="#CC33A1FF" />
            <corners android:radius="24dp" />
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="#80262A30"
                android:startColor="#CC1C2026" />
            <corners android:radius="24dp" />
            <stroke
                android:width="1dp"
                android:color="#40DFE2EA" />
        </shape>
    </item>
</selector>
