<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- M3 outlined button (if used anywhere) -->
    <style name="PSX2.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/brand_outline</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">@color/brand_ripple</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- M3 elevated button with modern gradient background and rounded corners -->
    <style name="PSX2.ElevatedTransparentButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="rippleColor">@color/brand_ripple</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:background">@drawable/bg_button_modern_selector</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">0dp</item>
        <item name="iconSize">28dp</item>
        <item name="iconGravity">textStart</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- Custom toggle button with light pink selected background -->
    <style name="PSX2.ToggleButton" parent="Widget.Material3Expressive.Button.OutlinedButton">
        <item name="backgroundTint">@drawable/toggle_button_background</item>
        <item name="rippleColor">@color/brand_ripple</item>
    </style>
</resources>
